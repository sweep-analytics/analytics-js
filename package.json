{
  "name": "sweep-analytics-js",
  "version": "0.0.1",
  "description": "Vanilla ES6 tracking library for sweep analytics integration.",
  "repository": "git@github.com:bentzibentz/sweep-analytics-js.git",
  "author": {
    "name": "Fabian Bentz & Jonas Regner",
    "url": "https://www.fabianbentz.de",
    "email": "info@fabianbentz.de"
  },
  "license": "MIT",
  "keywords": [
    "analytics",
    "tracking",
    "lightweight",
    "es6"
  ],
  "main": "dist/sweep.js",
  "browser": "dist/sweep.min.js",
  "module": "dist/sweep.mjs",
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "Chrome 49",
    "Edge 15",
    "Firefox 52",
    "IE 11",
    "Safari 10.1"
  ],
  "xo": {
    "space": 4,
    "rules": {
      "unicorn/prefer-node-append": "off",
      "unicorn/prefer-query-selector": "off"
    },
    "ignores": [
      "examples/**/*.js",
      "karma.conf.js",
      "test/index.js"
    ],
    "globals": [
      "assert"
    ],
    "envs": [
      "node",
      "browser",
      "mocha"
    ]
  },
  "scripts": {
    "build": "npm run lint && rollup --config && npm run size",
    "build:test": "rollup --config=test/rollup.config.js --file=test/build.js test/index.js",
    "dev": "karma start",
    "lint": "xo",
    "size": "size-limit --limit 2.8KB src/sweep.js",
    "test": "npm run lint && karma start --single-run",
    "test:browserstack": "npm run build:test && browserstack-runner",
    "watch": "rollup --config --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "browserstack-runner": "^0.9.0",
    "chai": "^4.2.0",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^7.0.0",
    "mocha": "^6.1.4",
    "simulant": "^0.2.2",
    "size-limit": "^1.3.3",
    "xo": "^0.24.0"
  }
}
